@{
    var title = (string)ViewData["Title"];


    if (!string.IsNullOrEmpty(title))
        title += " - ";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title SportPeople</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/node_modules/jquery.cookie/jquery.cookie.js"></script>
    <script src="~/node_modules/progressbar.js/dist/progressbar.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand">SportPeople</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href ="/News">Новости</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="News/About">О нас</a>
                        </li>
                    </ul>
                </div>
                    <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="vh-100 w-75 mx-auto py-3 d-flex">
        <div class="d-flex flex-column align-items-center pt-5 mr-2" id="menu">
            <a href="/Dialogs" class="my-2 menu-item">
                <img src="~/images/messages.png" width="40" />
            </a>
            <a href="/Users" class="my-2 menu-item">
                <img src="~/images/search.png" width="40" />
            </a>
            <a href="/User" class="my-2 menu-item">
                <img src="~/images/user.png" width="40" />
            </a>
            <a href="/Activities" class="my-2 menu-item">
                <img src="~/images/user.png" width="40" />
            </a>
            <a href="#" class="my-2 menu-item" onclick="LogOut()">
                <img src="~/images/logout.png" width="40" style=" opacity: 0.15;" />
            </a>

        </div>
        @RenderBody()
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - SportPeople
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
